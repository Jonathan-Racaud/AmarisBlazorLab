@if (Project != null)
{
    <Row>
        @foreach (var category in Project.ProjectCategories)
        {
            <Column ColumnSize="ColumnSize.IsAuto">
                <Badge Color="Color.Dark">@category.Category.Name</Badge>
            </Column>
        }
    </Row>
}

@code {
    [Parameter]
    public Project Project { get; set; }
}