@if (Project != null)
{
    <Heading Size="HeadingSize.Is5">Contributors:</Heading>
    <ListGroup>
        @foreach (var project in Project.UserProjects)
        {
        <ListGroupItem>
            <Container Fluid="true">
                <Row>
                    <Column ColumnSize="ColumnSize.Is8" Class="align-self-center">
                        @project.User.Email
                    </Column>
                    <Column ColumnSize="ColumnSize.Is2" Class="d-flex justify-content-end align-self-center">
                        <Buttons>
                            <Blazorise.Link To='@($"/user/{project.UserId}")' Class="btn">
                                <Icon Name="IconName.Eye" />
                            </Blazorise.Link>
                        </Buttons>
                    </Column>
                </Row>
            </Container>
        </ListGroupItem>
        }
    </ListGroup>
}

@code {
    [Parameter]
    public Project Project { get; set; }
}
