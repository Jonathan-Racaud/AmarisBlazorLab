<Bar Mode="BarMode.VerticalPopout" CollapseMode="BarCollapseMode.Small"
        Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet"
        ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="IconName.Home" />
                Amaris Blazor Lab
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <AuthorizeView Roles="Admin">
                <BarItem>
                    <BarLink To="/administration">
                        <BarIcon IconName="IconName.Dashboard" />
                        Administration
                    </BarLink>
                </BarItem>
            </AuthorizeView>
            <AuthorizeView>
                <BarItem>
                    <BarLink To="/projects">
                        <BarIcon IconName="IconName.Book" />
                        Projects
                    </BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="/users">
                        <BarIcon IconName="IconName.Users" />
                        Users
                    </BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>

        <BarEnd>
            <LoginDisplay />
        </BarEnd>
    </BarMenu>
</Bar>