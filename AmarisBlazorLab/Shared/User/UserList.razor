@inject UserService Service

<Heading Size="HeadingSize.Is3">All users</Heading>

@if (Users.Count == 0)
{
    <Alert>
        <AlertMessage>Error getting the list of users.</AlertMessage>
    </Alert>
}
else
{
    <ListGroup>
        @foreach (var user in Users)
        {
            <ListGroupItem>
                <Container Fluid="true">
                    <Row>
                        <Column ColumnSize="ColumnSize.Is1">
                            @if (user.Roles.Contains("Admin"))
                            {
                                <Badge Color="Color.Info">Admin</Badge>
                            }
                        </Column>
                        <Column ColumnSize="ColumnSize.Is10">
                            @user.Email
                        </Column>
                        <Column ColumnSize="ColumnSize.Is1">
                            <Buttons>
                                <Blazorise.Link To='@($"/user/{user.Id}")' Class="btn">
                                    <Icon Name="IconName.Eye" />
                                </Blazorise.Link>
                            </Buttons>  
                        </Column>
                    </Row>
                </Container>
            </ListGroupItem>
        }
    </ListGroup>
}

@code {
    List<User> Users;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Users = Service.GetAllWithRoles();
    }

    public void Reload()
    {
        Users = Service.GetAllWithRoles();
        StateHasChanged();
    }
}
